<section id="contact-info"><div class="center">                
    <h2>Administrar Bloques</h2>
    <p class="lead">Seleccione un doctor para editar su agenda</p>
</div></section>

<table>
	<tr>
		<th>Nombre</th>
		<th>Editar</th>
	</tr>
	<% @usuarios.each do |u|%>
		<% @doctors.each do |d|%>
			<% if u.user_id == d.user_id %>
				<tr>
					<td><%= u.user_NAMES%> <%= u.user_LASTNAME1%></td>
					<td><%= link_to "<button class= 'btn btn-primary btn-lg btn-block login-button' >Modificar</button>".html_safe, {:action => 'block', :doctor_id => d.doctor_id, :user_id => u.user_id} %></td>
				</tr>
			<% end %>
		<% end %>
	<% end %>
</table>

