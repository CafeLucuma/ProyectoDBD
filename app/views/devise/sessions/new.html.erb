<head>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>

<body>
  <div class="login">
    <div class="container">
      <div class="row main" style = "margin-top: 20px">
        <div class="panel-heading">
          <div class="panel-title text-center">
            <h2 class="login-title">Iniciar Sesión</h2>
          </div>
        </div>
      </div> 
      <div class="main-login main-center">
          <form class="form-horizontal" method="post" action="#">
            <div class="form-group">
              <label for="name" class="cols-sm-2 control-label">Correo</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                  <%= f.email_field :email, autofocus: true, placeholder: "Ingrese sus Correo"%>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="name" class="cols-sm-2 control-label">Contraseña</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Ingrese sus Contraseña"%>
                </div>
                <div class="field">
                  <% if devise_mapping.rememberable? -%>
                    <center><%= f.check_box :remember_me %><%= f.label :Recordarme %></center>
                  <% end -%>
                </div>
              </div>
            </div>
            <div class="form-group ">
              <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Ingresar</button>
            </div>
            <div class="login-register">
              <%= render "devise/shared/links" %>
            </div>
          </form>
      </div>
    </div>
  </div>
</body>
<% end %>

