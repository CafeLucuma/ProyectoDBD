<head>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>

<nav class="navbar navbar-inverse" role="banner">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand"> <%= link_to image_tag("logo.png"), welcome_index_path %></a>
        </div>
        <div class="collapse navbar-collapse navbar-right">
            <ul class="nav navbar-nav">
                <li><%= link_to "Inicio",  welcome_index_path %></li>
                <!--IF-->
                <%- if user_signed_in?%>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.user_NAMES %> <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "Cerrar Sesión", destroy_user_session_path, :method => :delete %></li>
                            <li><a href="#">Ver Perfil</a></li>
                        </ul>
                    </li>
                <!--ELSE-->
                <%- else %>
                    <li class = "active"><%= link_to "Iniciar sesión",  new_user_session_path %></li>
                <% end -%><!-- END IF -->
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Servicios <i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Reservar Hora Médica", search_index_path %></li>
                        <li><a href="#">Ver Fichas</a></li>
                    </ul>
                </li>
                <li><a href="#">Acerca de Nosotros</a></li>
                <li><%= link_to "Ubicaciones",  establishments_index_path %></li>
                <li><a href="#">Blog</a></li> 
                <li><a href="#">Contacto</a></li>                        
            </ul>
        </div>
    </div><!--/.container-->
</nav><!--/nav-->

<body>
  <div class="login">
    <div class="container">
      <div class="row main" style = "margin-top: 20px">
        <div class="panel-heading">
          <div class="panel-title text-center">
            <h1 class="login-title">Iniciar Sesión</h1>
          </div>
        </div>
      </div> 
      <div class="main-login main-center">
          <form class="form-horizontal" method="post" action="#">
            <div class="form-group">
              <label for="name" class="cols-sm-2 control-label">Correo</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                  <%= f.email_field :email, autofocus: true, placeholder: "Ingrese sus Correo"%>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="name" class="cols-sm-2 control-label">Contraseña</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Ingrese sus Contraseña"%>
                </div>
                <div class="field">
                  <% if devise_mapping.rememberable? -%>
                    <center><%= f.check_box :remember_me %><%= f.label :Recordarme %></center>
                  <% end -%>
                </div>
              </div>
            </div>
            <div class="form-group ">
              <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Ingresar</button>
            </div>
            <div class="login-register">
              <%= render "devise/shared/links" %>
            </div>
          </form>
      </div>
    </div>
  </div>
</body>
<% end %>

